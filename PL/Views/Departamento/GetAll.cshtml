@model BL.Departamento.DepartamentoObj
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <section>
        <h2>Módulo</h2>

    </section>

    <section>
        @if (Model.Departamentos == null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.Message
            </div>
        }
        <table class="table table-bordered table-responsive">
            <thead>
                <tr>
                    <td class="hidden">IdDepartamento</td>
                    <td class="text-center" style="font-weight:bold;">Descripcion</td>
                </tr>
            </thead>
            <tbody>

                @foreach (BL.Departamento.DepartamentoObj departamento in Model.Departamentos)
                {
                    <tr>
                        <td class="hidden">@departamento.IdDepartamento</td>
                        <td class="text-center">@departamento.Descripcion</td>
                    </tr>
                }
            </tbody>
        </table>

    </section>
</div>